<div class="container">

    <h1>Eat-Da-Burger!</h1>

    <div class="row">

        <div class="col-md-3">

            <ol id="notDevoured">
                {{#each burgers}}
                {{#unless devoured}}
                <div>
                    <div class="eachNotDevoured">
                        <li class="burgerNotDevoured">{{this.burger_name}}</li>
                    </div>
                    <button class="devourIt" id={{this.id}} align="right">Devour it!</button>
                </div>
                {{/unless}}
                {{/each}}
            </ol>

        </div>

        <div class="col-md-6">

            <center>
                <img src="../../assets/img/burger.png" id="burgerImg">
            </center>
        </div>

        <div class="col-md-3">

            <ol id="devoured">
                {{#each burgers}}
                {{#if this.devoured }}
                <div>
                    <li>{{this.burger_name}}</li>
                </div>
                {{/if}}
                {{/each}}
            </ol>

        </div>
    </div>


    <div class="row">

        <div class="col-md-12">
            <form id="form">
                <h2 id="instructions">Enter a burger you want to eat. Then click the submit button.</h2>

                <center>
                    <input type="text" id="burgerName">
                    <input type="submit" value="Submit" id="submit">
                </center>
            </form>
        </div>
    </div>

</div>